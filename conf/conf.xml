<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    >

  <bean name="dataReader" class="pokerga.DataReader">
    <constructor-arg value="data/poker-hand-training-true.data"/>
  </bean>

  <bean name="initializer" class="pokerga.Population.Initializer">
    <constructor-arg name="populationSize" value="100" />
    <constructor-arg name="chromosomeLength" value="1024" />
  </bean>

  <bean name="interpreter" class="pokerga.Interpreter">
    <constructor-arg name="maxStack" value="1024" />
  </bean>
  
  <bean name="mutator" class="pokerga.mut.IdentityMutator">
  </bean>
  
  <bean class="pokerga.Evaluator">
    <constructor-arg ref="dataReader" />
    <constructor-arg ref="initializer" />
    <constructor-arg ref="interpreter" />
    <constructor-arg ref="mutator" />
    <constructor-arg name="maxGenerations" value="2" />
  </bean>

</beans>
