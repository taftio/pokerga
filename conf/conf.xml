<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    >

  <bean name="dataReader" class="pokerga.DataReader">
    <property name="file" value="data/poker-hand-training-true.data"/>
  </bean>

  <bean name="initializer" class="pokerga.Population.Initializer">
    <property name="populationSize" value="100" />
    <property name="chromosomeLength" value="1024" />
  </bean>

  <bean name="interpreter" class="pokerga.Interpreter">
    <property name="maxDepth" value="8" />
    <property name="maxStack" value="4096" />
  </bean>
  
  <bean name="mutator" class="pokerga.mut.IdentityMutator">
  </bean>
  
  <bean class="pokerga.Evaluator">
    <property name="dataReader" ref="dataReader" />
    <property name="initializer" ref="initializer" />
    <property name="interpreter" ref="interpreter" />
    <property name="mutator" ref="mutator" />
    <property name="maxGenerations" value="1" />
  </bean>

</beans>
